<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Город живой</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .rounded-nav {
            border-radius: 0 0 1rem 1rem;
        }

        .auth-btn {
            border-radius: 2rem;
        }
    </style>
</head>
<body class="bg-light">
    <header>
        <nav class="navbar navbar-expand-sm navbar-white bg-white rounded-nav shadow-sm">
            <div class="container">
                <a class="navbar-brand text-primary fw-bold fs-4" href="/">Город живой</a>

                <div class="ms-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <form asp-controller="Account" asp-action="Quit" method="post">
                            <button type="submit" class="btn btn-outline-primary auth-btn px-4">Выйти</button>
                        </form>
                    }
                    else
                    {
                        <a href="/Account/SignIn" class="btn btn-primary auth-btn px-4">Войти</a>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container my-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>